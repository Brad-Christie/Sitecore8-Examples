<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>@ViewBag.Title | Sitecore8.ServicesClient</title>

  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/flatly/bootstrap.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href="~/Content/DemoSite/DemoSite.min.css" rel="stylesheet">
  <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body class="@(IsSectionDefined("Jumbotron")?"home":String.Empty)">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="@Url.RouteUrl("Sitecore8-ServicesClient", new { action = "" })">Sitecore8.ServicesClient</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <a href="@Url.RouteUrl("Sitecore8-ServicesClient", new { action = "Default" })">Default</a>
          </li>
          <li>
            <a href="@Url.RouteUrl("Sitecore8-ServicesClient", new { action = "Custom" })">Custom</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/sitecore/login" target="_blank"><i class="fa fa-fw fa-sign-in"></i> Sitecore</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    @if (IsSectionDefined("Jumbotron"))
    {
      @RenderSection("Jumbotron", false)
    }
    else
    {
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            @ViewBag.Title
            <small>@ViewBag.Subtitle</small>
          </h1>
        </div>
      </div>
    }
    @RenderBody()
  </div>

  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <script src="~/Scripts/DemoSite/app.min.js"></script>
  @RenderSection("Scripts", false)
</body>

</html>